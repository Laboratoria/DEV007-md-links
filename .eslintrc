{
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "code": 80 }],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "always", // No requerir extensi贸n en archivos .js
        "jsx": "always", // No requerir extensi贸n en archivos .jsx
        "ts": "always", // No requerir extensi贸n en archivos .ts
        "tsx": "always" // No requerir extensi贸n en archivos .tsx
      }
    ]
  },
  "extends": "airbnb",
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.spec.jsx"]
    }
  ]
}
